{
  "name": "hear-me-read",
  "version": "0.1.0",
  "description": "Hear Me Read \u2013 desktop app (Electron)",
  "main": "main.js",
  "author": "Fermin Velazquez (idea)",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac --publish never"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "pdfjs-dist": "^3.11.174"
  },
  "build": {
    "appId": "com.hearme.read",
    "productName": "Hear Me Read",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "icon": "build/icon.png",
      "category": "Education"
    }
  }
}